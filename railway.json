{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKER",
    "dockerfilePath": "Eternalgy-MCP-RAG/Dockerfile",
    "context": "."
  },
  "deploy": {
    "startCommand": "sh Eternalgy-MCP-RAG/start.sh",
    "healthcheckPath": "/api/v1/health",
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  }
}
